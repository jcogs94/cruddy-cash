<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/show.css">
    <link rel="stylesheet" href="/css/indexList.css">
    <title>CRUDdy Cash - <%= category.name %></title>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <main>
        <h1><%= category.name %> (<% if(category.isIncome) { %>
            income
        <% } else { %>
            expense
        <% } %>)</h1>
        <% if(category.entries.length === 0) { %>
            <p><em>There are no entries for this category.</em></p>
        <% } else { %>
            <h2>Entries</h2>
            <ul>
                <% category.entries.forEach( (entry) => { %>
                    <li>
                        <a href="/categories/<%= category._id %>/entries/<%= entry._id %>"><%= entry.name %></a>
                    </li>
                <% }) %>
            </ul>
        <% } %>
        <div>
            <form action="/budgets/<%= budget._id %>" method="get">
                <button type="submit">Go Back</button>
            </form>
            <form action="/categories/<%= category._id %>/entries/new" method="get">
                <button type="submit">Create Entry</button>
            </form>
            <form action="/categories/<%= category._id %>/edit" method="get">
                <button type="submit">Edit</button>
            </form>
            <form action="/categories/<%= category._id %>?_method=delete" method="post">
                <button type="submit">Delete</button>
            </form>
        </div>
    </main>
</body>
</html>